generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  ADMIN
  USER
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  role     Role     @default(USER)

  posts    Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?

  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}
